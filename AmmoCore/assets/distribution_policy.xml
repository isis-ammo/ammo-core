<?xml version="1.0"?>
<!--
   This copy of the default distribution policy is provided 
   as a convenience.  If you wish to customize these settings
   simply make your changes and save the file back in the 
   /data/data/edu.vu.isis.ammo.core/app_policy/
   directory removing the "sample" suffix.

   DATE: 2012-03-05
   
   Priority: BACKGROUND = -1000;
             LOW = -10;
             NORMAL = 0;
             HIGH = 10;
             URGENT = 1000;
             
   lifespan: is the time that a request will persist in minutes.
   
   These values for "priority" and "lifespan" are not 
   inheritable and must be provided explicitly.
   
   On literals the "condition" must be "success" or "failure".
-->
<policy>

    <topic type="" >

        <description>
Generally requests should be sent over the gateway, unless it isn't
available then local multicast delivery should be used.
        </description>

        <routing
            category="postal"
            lifespan="30"
            priority="normal" >

            <clause>
                <literal
                    condition="success"
                    encoding="json"
                    term="usb" />
                
                <literal
                    condition="success"
                    encoding="json"
                    term="gateway" />

                <literal
                    condition="success"
                    encoding="json"
                    term="reliablemulticast" />

                <literal
                    condition="success"
                    encoding="json"
                    term="multicast" />
            </clause>
        </routing>

        <routing
            category="subscribe"
            lifespan="500000"
            priority="high" > <!-- about a year -->

            <clause>
                
				<literal
                    condition="success"
                    encoding="json"
                    term="usb" />

                <literal
                    condition="success"
                    encoding="json"
                    term="gateway" />

                <literal
                    condition="success"
                    encoding="json"
                    term="reliablemulticast" />
            </clause>
        </routing>

        <routing
            category="retrieval"
            lifespan="10"
            priority="normal" >

            <clause>

				<literal
                    condition="success"
                    encoding="json"
                    term="usb" />
                
                <literal
                    condition="success"
                    encoding="json"
                    term="gateway" />

                <literal
                    condition="success"
                    encoding="json"
                    term="reliablemulticast" />
            </clause>
        </routing>
    </topic>

