<?xml version="1.0" ?>
 
<configuration>

  <property name="LOG_DIR" value="/mnt/sdcard" />

  <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
    <checkLoggable>false</checkLoggable>
    <tagEncoder>
       <pattern>ammo.%logger{15}</pattern>
    </tagEncoder>
    <encoder>
       <pattern>[%method] %msg%n</pattern>
    </encoder>
  </appender>
  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_DIR}/omma.log</file>
    <append>true</append>
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="store" level="TRACE"  additivity="false">
     <appender-ref ref="LOGCAT" />
     <appender-ref ref="FILE" />
  </logger>
  
  <logger name="api.request" level="WARN" />
  <logger name="api.parcel" level="TRACE" />
  
  <logger name="class.IncompleteRequest" level="TRACE" />
  
  <logger name="queue" level="TRACE" />

  <root level="WARN">
    <appender-ref ref="LOGCAT" />
    <appender-ref ref="FILE" />
  </root>

</configuration>
