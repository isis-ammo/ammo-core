<?xml version="1.0" ?>
 
 <!--
   By default encoders are assigned the type
     ch.qos.logback.classic.encoder.PatternLayoutEncoder
 -->
<configuration>

  <property name="LOG_DIR" value="/mnt/sdcard" />

  <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
    <checkLoggable>false</checkLoggable>
    <tagEncoder>
       <pattern>ammo.%logger{15}</pattern>
    </tagEncoder>
    <encoder>
       <pattern>[%method] %msg%n</pattern>
    </encoder>
  </appender>
  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_DIR}/ammo.log</file>
    <append>true</append>
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="api" level="WARN"  additivity="false">
     <appender-ref ref="LOGCAT" />
     <appender-ref ref="FILE" />
  </logger>
  
  <logger name="api.request" level="WARN" />
  <logger name="api.intent" level="WARN" />
  <logger name="api.parcel" level="WARN" />
  <logger name="api.store" level="WARN" />
  
  <logger name="comm" level="WARN" />
  
  <logger name="class.store" level="WARN" />
  <logger name="class.dist" level="WARN" />
  
  <logger name="queue" level="WARN" />

 <logger name="net.message" level="WARN" />

  <root level="WARN">
    <appender-ref ref="LOGCAT" />
  </root>

</configuration>
