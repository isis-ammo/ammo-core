  <build>
    <directory>target</directory>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${root.basedir}/target/generated-sources/pb</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>version_gen</id>
            <phase>validate</phase>
            <configuration>
              <target>
                <ant antfile="maven-version-generator.xml" inheritAll="true" inheritRefs="true">
                  <target name="update-version" />
                </ant>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>make_tar</id>
            <phase>install</phase>
            <configuration>
              <tasks>
                <mkdir dir="${root.basedir}/build" />
                <copy todir="${root.basedir}/build">
                  <fileset dir="${basedir}/target">
                    <include name="*-${project.version}.apk" />
                  </fileset>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
