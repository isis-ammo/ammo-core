  <profiles>
    <profile>
      <id>x86</id>
      <activation>
        <!--activeByDefault>true</activeByDefault-->
        <os>
          <family>unix</family>
          <arch>i386</arch>
        </os>
      </activation>
      <properties>
        <protoc.path>x86</protoc.path>
      </properties>
      <dependencies>
        <dependency>
          <groupId>com.google.protobuf</groupId>
          <artifactId>protoc-gateway-x86</artifactId>
          <version>2.3.0</version>
          <type>exe</type>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-sources</id>
                <phase>generate-sources</phase>
                <configuration>
                  <tasks>
                    <exec executable="echo">
                      <arg value="${os.arch}" />
                    </exec>
                    <mkdir dir="target/generated-sources/pb" />
                    <property name="proto.dir" value="../../Gateway/common/protocol" />
                    <exec executable="chmod">
                      <arg value="555" />
                      <arg value="${com.google.protobuf:protoc-gateway-x86:exe}" />
                    </exec>
                    <echo>Generating protocol buffers</echo>
                    <exec executable="${com.google.protobuf:protoc-gateway-x86:exe}" taskname="pb">
                      <arg value="--proto_path" />
                      <arg value="${proto.dir}" />
                      <arg value="--java_out=target/generated-sources/pb" />
                      <arg value="${proto.dir}/AmmoMessages.proto" />
                    </exec>
                  </tasks>
                  <sourceRoot>target/generated-sources</sourceRoot>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
              <execution>
                <id>ndk_gen</id>
                <phase>validate</phase>
                <configuration>
                  <tasks>
                    <echo>Building ethertracker library</echo>
                    <exec executable="ndk-build" dir="." searchpath="true" />
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
              <execution>
                <id>update_project</id>
                <phase>validate</phase>
                <configuration>
                  <tasks>
                    <echo message="configure AmmoCore..."/>
                    <exec executable="android" dir="${basedir}" searchpath="true">
                      <arg line="update"/> <arg line="project"/>
                      <arg line="--path"/> <arg line="."/>
                      <arg line="--target"/> <arg line="${android.target}"/>
                    </exec>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>ant-contrib</groupId>
                <artifactId>ant-contrib</artifactId>
                <version>1.0b3</version>
                <exclusions>
                  <exclusion>
                    <groupId>ant</groupId>
                    <artifactId>ant</artifactId>
                  </exclusion>
                </exclusions>
              </dependency>
              <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.6.4</version>
              </dependency>
              <dependency>
                <groupId>com.google.protobuf</groupId>
                <artifactId>protobuf-java</artifactId>
                <version>2.3.0</version>
              </dependency>
              <dependency>
                <groupId>org.json</groupId>
                <artifactId>json</artifactId>
                <version>20090211</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
