<?xml version="1.0" encoding="utf-8"?>
<!--
This layout is used to show the current aggregate state of
an ammo request
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50" >

        <TextView
            android:id="@+id/last_seen_label"
            style="@style/blue_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_since_last_seen_ms_" />

        <TextView
            android:id="@+id/dist_capability_view_item_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/last_seen_label"
            android:padding="5dp"
            android:textColor="#FFF"
            android:textSize="18dp" />
        
        <TextView
            android:id="@+id/first_seen_label"
            style="@style/blue_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dist_capability_view_item_latest"
            android:text="@string/time_since_first_seen_ms_" />

        <TextView
            android:id="@+id/dist_capability_view_item_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_seen_label"
            android:padding="5dp"
            android:textColor="#FFF"
            android:textSize="18dp" />
        
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="50"
    android:layout_marginLeft="50dp" >

    <TextView
        android:id="@+id/item_device_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/blue_label"
        android:text="@string/device"
         />

    <TextView
        android:id="@+id/dist_capability_view_item_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_device_label"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/pres_view_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dist_capability_view_item_device"
 		style="@style/blue_label"
        android:text="@string/operator"
         />

    <TextView
        android:id="@+id/dist_capability_view_item_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pres_view_item_label"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="18dp" />
    
    
    <TextView
        android:id="@+id/dist_capability_view_item_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pres_view_item_label"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="18dp" />
    
    
    <TextView
        android:id="@+id/dist_capability_view_item_subtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pres_view_item_label"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="18dp" />
    
    
    <TextView
        android:id="@+id/dist_capability_view_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pres_view_item_label"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="18dp" />

</RelativeLayout>

</LinearLayout>