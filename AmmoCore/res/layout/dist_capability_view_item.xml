<?xml version="1.0" encoding="utf-8"?>
<!-- 
This layout is used to show the current aggregate state of
an ammo request
-->
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:padding="15dp" >
  
  <RelativeLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" >
	  
	  <TextView android:id="@+id/dist_capability_view_item_first"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:textSize="18dp"
	        android:textColor="#FFF" />
		
	  <TextView android:id="@+id/dist_capability_view_item_latest"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:textSize="18dp"
	  		android:textColor="#FFF"
	  		android:layout_alignParentRight="true" />
  
  </RelativeLayout>
          
  <TextView android:id="@+id/dist_capability_view_item_topic"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:textSize="18dp"
		android:textColor="#FFF" />
		
  <TextView android:id="@+id/dist_capability_view_item_subtopic"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:padding="5dp"
  		android:textSize="18dp"
  		android:textColor="#FFF" />
  
   <TextView android:id="@+id/dist_capability_view_item_device"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:textSize="18dp"
		android:textColor="#FFF" />
		
  <TextView android:id="@+id/dist_capability_view_item_operator"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:padding="5dp"
  		android:textSize="18dp"
  		android:textColor="#FFF" />
  		
</LinearLayout>
