<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gateway_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

  <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_type"
            android:visibility="invisible"/>

  <TextView android:id="@+id/multicast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="3dip"
            android:textSize="16dip"
            android:hint="Name"/>

  <TextView android:id="@+id/multicast_formal"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:textSize="16dip"
            android:hint="Formal Name (e.g. host:port)" />

  <TextView android:id="@+id/multicast_status_one"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:textSize="16dip"
            android:hint="Checking status..." />

  <TextView android:id="@+id/multicast_status_two"
            android:layout_alignParentRight="true"
            android:layout_below="@id/multicast_status_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:textSize="16dip"
            android:visibility="invisible" />

  <!-- These two TextViews are in the middle, just to the left of the
       right column.  They display the bytes send/received, and the
       bps sent/received. -->

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@id/multicast_status_one"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="vertical" >

    <TextView android:id="@+id/multicast_send_stats"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="3dip"
	      android:textSize="16dip"
	      android:hint="Collecting send stats..." />

    <TextView android:id="@+id/multicast_receive_stats"
	      android:layout_below="@id/multicast_send_stats"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:padding="3dip"
	      android:textSize="16dip"
	      android:hint="Collecting receive stats..." />
  </LinearLayout>

</RelativeLayout>
